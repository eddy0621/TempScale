<!doctype html>
<html lang="en">
  <head>
    {{>header}}
  </head>
  <body>
    {{>navbar}}
      <div class="container-fluid main_header">
          <div class="row">
              <div class="col-md-10 col-12 max-auto">
                  <div class="row">
                      <div class="col-md-6 col-12 main_header_left">
                          <p>Welcome to weather app</p>
                          <h1>Get the Latest <span class="text-primary"> weather</span> update of your city</h1>
                        <a href="/weather"><button>check now</button></a>
                        </div>
                      <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="images/image 3.png" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img src="images/image5.png" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img src="images/image 6.gif" alt="Third slide">
                              </div>
                            </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>

      {{>footer}}

